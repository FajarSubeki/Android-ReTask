<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:rowandroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/reladialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pilih Aksi"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:layout_alignParentTop="true"/>

        <View
            android:layout_below="@id/textTitle"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorFrame" />
    </RelativeLayout>

    <TableLayout
        android:layout_below="@id/reladialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:rowCount="3"
        android:columnCount="3"
        android:padding="5dp"
        >

        <TableRow>

            <android.support.v7.widget.CardView
                android:id="@+id/cvUpdate"
                android:layout_width="70dp"
                android:layout_height="70dp"
                rowandroid:cardBackgroundColor="#0a3d62"
                rowandroid:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvLama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"
                        android:scaleType="center"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvSelesai"
                android:layout_width="70dp"
                android:layout_height="70dp"
                rowandroid:cardBackgroundColor="#17c0eb"
                rowandroid:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvSelesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_shopping_list"
                        android:scaleType="center"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvHapus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                rowandroid:cardBackgroundColor="#eb2f06"
                rowandroid:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvHapus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hapus"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:scaleType="center"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </TableRow>

    </TableLayout>

</RelativeLayout>